@model RaceListService.Models.EditLastRaceVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">

        @using (Html.BeginForm("Edit", "NextRaces", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div style="padding-left:10px;">
            <div class="form-horizontal">
                <h4>Edit Recorded Last Race</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.RunnerId)

                <div class="form-group">
                    <label for="race">Race: </label>
                    <div class="col-md-10">
                        @Html.DropDownList("distanceList", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="meeting">Race Date : </label>
                    <div class="col-md-10">
                        <input name="raceDate" type="date" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Time">Race Time : </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RaceTimeSpan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RaceTimeSpan, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
            }
        
    </div>
</div>

<div>
    @Html.ActionLink("Back to List of Runners", "Index")
</div>

